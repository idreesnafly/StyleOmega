<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.idrees.styleomega">

    <application
        android:allowBackup="true"
        android:icon="@drawable/roundlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/roundlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp"
        tools:replace="android:icon">


        <meta-data android:name="DATABASE" android:value="styleOmega.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.idrees.styleomega.Model" />

        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignIn" />
        <activity android:name=".SignUp" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".ItemsScreen" />
        <activity android:name=".DetailedItemsScreen" />
        <activity android:name=".ShoppingCart" />
        <activity android:name=".CheckoutScreen" />
    </application>

</manifest>